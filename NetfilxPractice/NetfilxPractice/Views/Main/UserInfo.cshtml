@{
}
@model ApplicationUser

<h1>@Model.Email</h1>

<h2>Favourite Movies</h2>
@if(Model.FavouriteMovies.Any())
{
    <ul>
    @foreach(FavouriteUserMovie favUserMovie in Model.FavouriteMovies)
    {
        <li>@favUserMovie.FavouriteMovie.Title</li>
    }
    </ul>
}
else
{
    <div>No Favourite Movies Yet</div>
}


<h2>Watching Movies</h2>
@if(Model.WatchingMovies.Any())
{
    <ul>
    @foreach(WatchUserMovie watchUserMovie in Model.WatchingMovies)
    {
        <li>@watchUserMovie.WatchingMovie.Title</li>
    }
    </ul>
}
else
{
    <div>No Movies in Watch List</div>
}

<h2>Favourite Shows</h2>
@if(Model.FavouriteShows.Any())
{
    <ul>
    @foreach(FavouriteUserShow favouriteUserShow in Model.FavouriteShows)
    {
        <li>@favouriteUserShow.FavouriteShow.ShowName</li>
    }
    </ul>
} 
else
{
    <div>No Favourite Shows Yet</div>
}

<h2>Watching Shows</h2>
@if(Model.WatchingShows.Any())
{
    <ul>
    @foreach(WatchUserShow watchUserShow in Model.WatchingShows)
    {
        <li>@watchUserShow.WatchingShow.ShowName</li>
    }
    </ul>
}
else
{
    <div>No Shows in Watch List</div>
}
